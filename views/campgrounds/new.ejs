<%- layout('layouts/general') %>

<div class="row">
    <h1 class="text-center">Create a new campground!</h1>
    <div class="col-6 offset-3">
        <form
            action="/campgrounds"
            method="POST"
            class="needs-validation"
            novalidate>
            <div class="mb-3">
                <label
                    class="form-label"
                    for="title"
                    >Name</label
                >
                <input
                    type="text"
                    name="title"
                    id="title"
                    placeholder="Campground name"
                    class="form-control"
                    required />
            </div>
            <div class="mb-3">
                <label
                    class="form-label"
                    for="location"
                    >Location</label
                >
                <input
                    class="form-control"
                    type="text"
                    name="location"
                    id="location"
                    placeholder="Campground location"
                    required />
            </div>
            <div class="mb-3">
                <label
                    class="form-label"
                    for="image"
                    >Image URL</label
                >
                <input
                    class="form-control"
                    type="text"
                    name="image"
                    id="image"
                    placeholder="Campground image"
                    required />
            </div>
            <div class="mb-3">
                <label
                    class="form-label"
                    for="price"
                    >Price</label
                >
                <div class="input-group">
                    <span
                        class="input-group-text"
                        id="price-label"
                        >$</span
                    >
                    <input
                        type="text"
                        class="form-control"
                        placeholder="0"
                        aria-label="price"
                        name="price"
                        aria-describedby="price-label"
                        required />
                </div>
            </div>
            <div class="mb-3">
                <label
                    class="form-label"
                    for="description"
                    >Description</label
                >
                <textarea
                    class="form-control"
                    type="text"
                    name="description"
                    id="description"
                    placeholder="Campground description"
                    required></textarea>
            </div>
            <div class="mb-3">
                <button
                    class="btn btn-success"
                    type="submit">
                    Create
                </button>
            </div>
        </form>

        <div class="mb-5"><a href="/campgrounds">Cancel</a></div>
    </div>
</div>
